    {{ search.departure }}
  
    
    <label for="search_arrival">Arrival</label>
    <input class="search-field" type="text" id="search_arrival" placeholder="To" autocomplete="off" ng-model="search.arrival">
    {{ search.arrival }}

    <label for="datepicker-1">Date</label>
    <input class="search-field" type="text" id="datepicker-1">
    
    <button class="button-lg">Search</button>

</div>





<div class="container-fluid">
